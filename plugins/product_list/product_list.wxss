@import "/wxParse/wxParse.wxss";

.product-list{
  width: 100%;
  font-size: 24rpx;
}
.product-list-nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  font-size: 28rpx;
}
.nav-item{
  text-align: center;
  padding: 0 10rpx;
  border-bottom: 1rpx solid transparent;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.title{
  height: 80rpx;
  line-height: 80rpx;
}
.list_title{
  line-height: 80rpx !important;
}
.nav-item.active{
  border-color: #88bd79;
}
.nav-item.active .title{
  color: #88bd79;
}
.operate{
  height: 80rpx;
  padding: 25rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
   align-items: center; 
}
.operate text{
  line-height: 20rpx;
}
.nav-item.active .operate text.on{
  color: #88bd79;
}

.product-list-content{
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.product-list-item{
  border: 1px solid #e9e9e9; 
  margin-bottom: 10rpx;
  width: 48%;
}
.product-list-item image{
  width: 100%;
  height: 220rpx;
}
.product-list-item-detail{
  position: relative;
  padding: 10rpx;
  line-height: 40rpx;
}
.product-list-item-detail .icon-jiarugouwuche{
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  font-size: 40rpx;
}
.product-title{
  color: #313131;
} 
    
.last_price{
  font-size: 28rpx;
  color: #88bd79;
} 
    
.market_price{
  color: #a1a1a1;
  text-decoration: line-through;
}    
    
.list-btn{
  width: 95%;
  height: 70rpx;
  font-size: 24rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid #dddee1;
  border-radius: 8rpx;
  margin: 0rpx auto 20rpx;
}
.desc{
  height: 40rpx;
  line-height: 40rpx;
}
.wxParse-container image{
  max-width: 100% !important;
}